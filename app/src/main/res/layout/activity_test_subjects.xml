                android:text="@string/upperintermediate"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="2dp" />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@drawable/shape"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="3dp"
                android:padding="1dip" >


                <TableRow
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="0dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight=".50"
                        android:layout_margin="2dp"
                        android:background="@drawable/shape7">
                        <Button
                            android:id="@+id/idioms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/idioms"
                            android:background="@null"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:onClick="idioms"/>

                        <TextView
                            android:id="@+id/record_i"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/record"
                            android:layout_marginBottom="2dp"
                            android:gravity="center"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="11sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight=".50"
                        android:layout_margin="3dp"
                        android:background="@drawable/shape7">
                        <Button
                            android:id="@+id/word_conversion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/word_conversion"
                            android:background="@null"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:onClick="word_conversion"/>

                        <TextView
                            android:id="@+id/record_wc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/record"
                            android:layout_marginBottom="2dp"
                            android:gravity="center"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="11sp"
                            />
                    </LinearLayout>
                </TableRow>
                <TableRow
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="0dp"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight=".50"
                        android:layout_margin="2dp"
                        android:background="@drawable/shape7">

                        <Button
                            android:id="@+id/on_pv"
                            android:layout_width="match_parent"
                            android:background="@null"
                            android:layout_height="wrap_content"
                            android:text="@string/on_pv"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:onClick="on_pv"/>

                        <TextView
                            android:id="@+id/record_opv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/record"
                            android:layout_marginBottom="2dp"
                            android:gravity="center"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="11sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight=".50"
                        android:layout_margin="3dp"
                        android:background="@drawable/shape7">
                        <Button
                            android:id="@+id/out_pv"
                            android:layout_width="match_parent"
                            android:background="@null"
                            android:layout_height="wrap_content"
                            android:text="@string/out_pv"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:onClick="out_pv"/>
                        <TextView
                            android:id="@+id/record_outpv"
                            android:layout_width="match_parent"
